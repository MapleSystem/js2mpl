#========================MAKEFILE.in=====================================
ifeq ($(USECLANG), 1)
  CXX = clang++
  CC = clang
  AR = x86_64-linux-ar rcs
  FLAVOR = clang
else
  CXX = g++
  CC = gcc
  AR = ar rcs
  FLAVOR = gnu
endif

LD = g++

DYNAMICFLAG = -DDYNAMICLANG -DMIR_FEATURE_FULL=1 -m32

# Compile time flags
ifeq ($(DEBUG),1)
  CXXFLAGS = -O0 -g3 -Wall -DDEBUG  $(DYNAMICFLAG)
else
  CXXFLAGS = -O0 -g3 -Wall  $(DYNAMICFLAG)
endif

# Library paths in addition to /usr/lib
LFLAGS=-std=c++11

MKDIR_P = mkdir -p
